{% extends 'base.html.twig' %}

{% block nav %}
        {% include 'nav.html.twig'  %}
    {% endblock %}

{% block body %}

    <h1 class="titulos mtop">Perfil</h1>
        <article class="container-edit">
            <section class="container">
                <section class="img">
                    {% if app.user.photo %}
                        <img src="estilos/assets/images/users/{{app.user.photo}}" class="" alt="Imagen del usuario">
                    {% else %}
                        <img src="estilos/assets/images/users/sinFoto.png" class="" alt="Imagen del usuario">
                    {% endif %}
                </section>
                <form class="info" action="/updateUser" method="post" enctype="multipart/form-data">
                    <section class="groupInfo">
                        <section class="itemInfo">
                            <label for="">Dni:</label>
                            <input type="text" value="{{app.user.dni}}" readonly class="text">
                            <input type="text" value="{{app.user.id}}" class="oculto" name="id">
                        </section>
                        <section class="itemInfo">
                            <label for="">Email:</label>
                            <input type="text" value="{{app.user.email}}" class="text" name="email">
                            <p class="error col-12 oculto" id="e-nombre"><i class="fas fa-circle-exclamation"></i>Email invalido</p>
                        </section>
                        <section class="itemInfo">
                            <label for="">Nombre:</label>
                            <input type="text" value="{{app.user.name}}" class="text" name="name">
                            <p class="error col-12 oculto" id="e-nombre"><i class="fas fa-circle-exclamation"></i>Introduzca un Nombre</p>
                        </section>
                        <section class="itemInfo">
                            <label for="">1º Apellido:</label>
                            <input type="text" value="{{app.user.ap1}}" class="text" name="ap1">
                            <p class="error col-12 oculto" id="e-nombre"><i class="fas fa-circle-exclamation"></i>Introduzca su 1º Apellido</p>
                        </section>
                        <section class="itemInfo">
                            <label for="">2º Apellido:</label>
                            <input type="text" value="{{app.user.ap2}}" class="text" name="ap2">
                        </section>
                        <section class="itemInfo">
                            <label for="">Teléfono:</label>
                            <input type="text" value="{{app.user.phone}}" class="text" name="phone">
                            <p class="error col-12 oculto" id="e-nombre"><i class="fas fa-circle-exclamation"></i>Introduzca un Teléfono</p>
                        </section>
                    </section>
                    <input type="file" name="file-1" id="file-1" class="inputfile inputfile-1" value="{{app.user.photo}}" data-multiple-caption="{count} archivos seleccionados" multiple />
                            <label for="file-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="iborrainputfile" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
                                <span class="iborrainputfile">Seleccionar foto</span>
                            </label>
                    <input type="submit" class="btn btn-primary btn-subir" value="Subir" id="subir">
                </form>
            </section>
        </article>


{% endblock %}
{% block footer %}
    {% include 'footer.html.twig' %}
    <script src="{{ asset('estilos/assets/js/js/home.js') }}"></script>
{% endblock %}
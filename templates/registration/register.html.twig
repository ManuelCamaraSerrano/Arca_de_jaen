{% extends 'base.html.twig' %}

{% block body %}

    <section class="account-section section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10 col-xl-7">
                            <div class="account-form-wrap row justify-content-center">
                                <div class="col-lg-9 col-md-9 text-center">
                                    <img src="{{ asset('estilos/assets/images/logo.png') }}" alt="">
                                </div>
                                <div class="col-lg-12 col-md-8 col-8">
                                    {{ form_start(registrationForm, {'attr':{'class':'account-form'}}) }}
                                        <div class="row justify-content-center">
                                            <div class="form-group mb-4 col-lg-4 col-md-6 col-10">
                                                {{ form_row(registrationForm.email, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'Email'}}) }}
                                            </div>
                                            <div class="form-group mb-4 col-lg-4 col-md-6 col-10">
                                                {{ form_row(registrationForm.dni, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'Dni'}}) }}
                                            </div>
                                            <div class="form-group mb-4 col-lg-4 col-md-6 col-10">
                                                {{ form_row(registrationForm.plainPassword, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'Contraseña'}}) }}
                                            </div>
                                        
                                            <div class="form-group mb-4 col-lg-6 col-md-6 col-10">
                                                {{ form_row(registrationForm.name, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'Nombre'}}) }}
                                            </div>
                                            <div class="form-group mb-5 col-lg-6 col-md-6 col-5">
                                                {{ form_row(registrationForm.ap1, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'1º Apellido'}}) }}
                                            </div>
                                            <div class="form-group mb-4 col-lg-6 col-md-6 col-5">
                                                {{ form_row(registrationForm.ap2, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'2º Apellido'}}) }}
                                            </div>
                                            <div class="form-group mb-5 col-lg-6 col-md-6 col-10">
                                                 {{ form_row(registrationForm.phone, {'attr':{'class':'form-control'}}, {'attr':{'placeholder':'Teléfono'}}) }}
                                            </div>
                                            <div class="form-group mb-5 col-lg-10 col-md-10 col-12 text-center">
                                                {{ form_row(registrationForm.photo, {'attr':{'class':'inputfile inputfile-1'}}) }}
                                                <input type="file" name="file-1" id="file-1" class="inputfile inputfile-1" data-multiple-caption="{count} archivos seleccionados" multiple />
                                                <label for="file-1">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="iborrainputfile" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
                                                    <span class="iborrainputfile">Seleccionar foto</span>
                                                </label>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                         <button type="submit" class="btn btn-primary w-100">Registrarte</button>
                                        </div>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

{% endblock %}


